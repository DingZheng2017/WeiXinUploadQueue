<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/gray17"
              android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_delete_item"
            android:layout_width="100dp"
            android:layout_height="72dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:background="@color/red0"
            android:gravity="center"
            android:text="删 除"
            android:textColor="@drawable/text_color_remove_selector"
            android:textSize="@dimen/font16"/>

        <ImageView
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_marginLeft="9dp"
            android:src="@drawable/bg_white_circle"/>

        <RelativeLayout
            android:id="@+id/rl_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:layout_marginLeft="9dp"
                android:background="@drawable/bg_record_item">

                <LinearLayout
                    android:id="@+id/ll_Layout"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/record_circle"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray3"
                        android:textSize="@dimen/font10"
                        android:text="姓名"/>


                </LinearLayout>


                <ImageView
                    android:id="@+id/ivClock"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="18dp"
                    android:layout_toRightOf="@id/ll_Layout"
                    android:src="@drawable/record_clock"/>


                <TextView
                    android:id="@+id/tv_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@id/ivClock"
                    android:gravity="top"
                    android:singleLine="true"
                    android:text="0秒"
                    android:textColor="@color/black0"
                    android:textSize="@dimen/font16"/>


                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/ll_Layout"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/ll_Layout"
                    android:singleLine="true"
                    android:text="月日"
                    android:textColor="@color/gray3"
                    android:textSize="12sp"/>

                <ImageView
                    android:id="@+id/iv_circle"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="60dp"
                    android:src="@drawable/shape_green_circle"/>

                <TextView
                    android:id="@+id/tv_upload_status"
                    android:layout_width="80dp"
                    android:layout_height="36dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_ask_doctor"
                    android:gravity="center"
                    android:text="需上传"
                    android:textColor="@drawable/text_color_selector"/>
            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>
