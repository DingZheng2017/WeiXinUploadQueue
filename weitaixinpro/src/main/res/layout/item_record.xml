<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/gray17"
              android:orientation="horizontal">

    <CheckBox
        android:id="@+id/checkboxDelete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:background="@drawable/record_del_checkbox_selector"
        android:button="@null"
        android:clickable="false"
        android:focusable="false"
        android:visibility="gone"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_marginTop="10dp">


        <ImageView
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_marginLeft="9dp"
            android:src="@drawable/bg_white_circle"/>

        <RelativeLayout
            android:id="@+id/rl_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:layout_marginLeft="9dp"
                android:background="@drawable/bg_record_item">

                <LinearLayout
                    android:id="@+id/ll_Layout"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/record_circle"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓名"
                        android:textColor="@color/gray3"
                        android:textSize="@dimen/font20"/>


                </LinearLayout>


                <ImageView
                    android:id="@+id/ivClock"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="18dp"
                    android:layout_toRightOf="@id/ll_Layout"
                    android:src="@drawable/record_clock"/>


                <TextView
                    android:id="@+id/tv_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@id/ivClock"
                    android:gravity="top"
                    android:singleLine="true"
                    android:text="0秒"
                    android:textColor="@color/black0"
                    android:textSize="@dimen/font16"/>


                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/ll_Layout"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/ll_Layout"
                    android:singleLine="true"
                    android:text="月日"
                    android:textColor="@color/gray3"
                    android:textSize="12sp"/>

                <ImageView
                    android:id="@+id/iv_circle"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="60dp"
                    android:src="@drawable/shape_green_circle"/>

                <TextView
                    android:id="@+id/tv_upload_status"
                    android:layout_width="80dp"
                    android:layout_height="36dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_ask_doctor"
                    android:gravity="center"
                    android:text="需上传"
                    android:textColor="@drawable/text_color_selector"/>
            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>
