<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white0">

    <ImageView
        android:id="@+id/ivAddressImage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:src="@drawable/pay_choose" />

    <LinearLayout
        android:id="@+id/llOne1Function"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/ivAddressImage"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="多萨达as"
            android:textColor="@color/black0"
            android:textSize="@dimen/font12" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/llTwoFunction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:layout_below="@id/llOne1Function"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/ivAddressImage"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*从租凭日直至归还设备，共计600元"
            android:textColor="@color/gray7"
            android:textSize="@dimen/font10" />


    </LinearLayout>



    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="26dp"
        android:layout_alignParentRight="true"
        android:text="￥3213"
        android:textColor="@color/red0"
        android:textSize="@dimen/font16" />

</RelativeLayout>
