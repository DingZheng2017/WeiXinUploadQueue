<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray5"
    android:orientation="vertical">

    <include
        android:id="@+id/head_title_id"
        layout="@layout/layout_title" />


    <RelativeLayout
        android:id="@+id/ll_set_system_01"
        style="@style/wo_info_item"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:singleLine="true"
            android:text="自动开始"
            android:textColor="@drawable/text_color_hei_selector"
            android:textSize="@dimen/font_normal" />

        <CheckBox
            android:id="@+id/cbAutoStart"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:button="@drawable/set_system_guardian_selector" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/white0"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ll_set_system_02"
            style="@style/wo_info_item"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:singleLine="true"
                android:text="报警设置"
                android:textColor="@drawable/text_color_hei_selector"
                android:textSize="@dimen/font_normal" />

            <CheckBox
                android:id="@+id/cbPoliceSet"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:button="@drawable/set_system_guardian_selector" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="4dp"
            android:background="@color/gray8" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="请选择时间间隔，间隔时间之内不重复报警"
            android:textColor="@color/gray3"
            android:textSize="@dimen/font_normal" />


        <ListView
            android:id="@+id/lvGuardian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="10dp"
            android:cacheColorHint="#00000000"
            android:divider="@color/gray2"
            android:dividerHeight="1dp"
            android:fadingEdge="none"
            android:scrollbars="none"
            android:transcriptMode="normal" />


    </LinearLayout>

</LinearLayout>


