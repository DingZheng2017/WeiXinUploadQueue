<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/head_title_id"
        layout="@layout/layout_title" />


    <FrameLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/corner_background_hui_graded"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvGradedText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="暂时没有问题~~~"
                android:textColor="#000"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvGradedYes"
                    android:layout_width="80dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/corner_graded"
                    android:gravity="center"
                    android:text="是"
                    android:textColor="@drawable/text_color_hei_selector"
                    android:textSize="@dimen/font_normal14" />

                <TextView
                    android:id="@+id/tvGradedNo"
                    android:layout_width="80dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:background="@drawable/corner_graded"
                    android:gravity="center"
                    android:text="否"
                    android:textColor="@drawable/text_color_hei_selector"
                    android:textSize="@dimen/font_normal14" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvGradedNumberIndex"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text="1"
            android:textColor="@color/white0"
            android:gravity="center"
            android:textSize="@dimen/font30"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/circle_graded" />
    </FrameLayout>


</RelativeLayout>
