<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/rl_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="276dp"
    android:layout_height="400dp"
    android:layout_gravity="center_horizontal"
    android:background="@android:color/transparent"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/ll_begin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:background="@drawable/shape_grade_dialog"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="56dp"
            android:text="做个小评分"
            android:textColor="@color/text_color"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dimen_dp_5"
            android:text="看自己是否为高危用户"
            android:textColor="@color/text_color"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_mid_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="133dp"
            android:text="中间内容"
            android:textColor="@color/text_color"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="56dp"
            android:gravity="center"
            android:text="这是内容"
            android:textColor="@color/text_color"
            android:visibility="visible"/>

        <LinearLayout
            android:id="@+id/rl_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="56dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dimen_dp_40">

            <TextView
                android:id="@+id/tv_true"
                android:layout_width="80dp"
                android:layout_height="26dp"
                android:layout_marginRight="@dimen/dimen_dp_10"
                android:background="@drawable/corner_graded"
                android:gravity="center"
                android:padding="@dimen/dimen_dp_5"
                android:text="是"
                android:textColor="@drawable/text_color_hei_selector"
                android:textSize="@dimen/font_normal14"/>

            <TextView
                android:id="@+id/tv_false"
                android:layout_width="80dp"
                android:layout_height="26dp"
                android:layout_marginLeft="@dimen/dimen_dp_10"
                android:background="@drawable/corner_graded"
                android:gravity="center"
                android:padding="@dimen/dimen_dp_5"
                android:text="否"
                android:textColor="@drawable/text_color_hei_selector"
                android:textSize="@dimen/font_normal14"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26dp"
        android:background="@drawable/grade_num"
        android:gravity="center"
        android:textColor="@color/white0"
        android:text="01"
        android:textSize="@dimen/font30"/>
</FrameLayout>
