<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white0">


    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="16dp"
        android:text=""
        android:textColor="@color/black0"
        android:textSize="@dimen/font12" />


    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="26dp"
        android:layout_marginTop="16dp"
        android:text=""
        android:textColor="@color/red0"
        android:textSize="@dimen/font16" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingBottom="10dp"
        android:layout_marginRight="16dp"
        android:paddingTop="54dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvReduceOne"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:text="â€”"
            android:textColor="@drawable/text_color_hei_selector"
            android:textSize="@dimen/font34" />

        <TextView
            android:id="@+id/tvCountText"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/corner_background_gray16"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="1"
            android:textColor="@color/black0"
            android:textSize="@dimen/font22" />

        <TextView
            android:id="@+id/tvAddOne"
            android:layout_width="50dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="+"
            android:textColor="@drawable/text_color_hei_selector"
            android:textSize="@dimen/font34" />

    </LinearLayout>

</RelativeLayout>
