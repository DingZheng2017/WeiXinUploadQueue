<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray5">

    <include
        android:id="@+id/head_title_id"
        layout="@layout/layout_title" />

    <ScrollView
        android:id="@+id/scrollViewl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl10Function"
        android:layout_below="@id/head_title_id"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl11Function"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="2dp"
                android:background="@color/white0"
                android:paddingBottom="12dp"
                android:paddingTop="12dp">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:gravity="center"
                    android:text="订单商品:"
                    android:textColor="@color/gray12"
                    android:textSize="@dimen/font14" />


                <TextView
                    android:id="@+id/tvOrderGoods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:text="开通微胎心监护租凭服务"
                    android:textColor="@color/font_color"
                    android:textSize="@dimen/font14" />


            </RelativeLayout>

            <TextView
                android:id="@+id/tv2Style"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_below="@id/rl11Function"
                android:background="@color/gray5"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="领取方式"
                android:textColor="@color/gray12"
                android:textSize="@dimen/font12" />

            <RelativeLayout
                android:id="@+id/rlExpressageAction"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_below="@id/tv2Style"
                android:background="@color/white0">

                <ImageView
                    android:id="@+id/ivExpressageAction"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/pay_choose_un" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/ivExpressageAction"
                    android:text="快递方式"
                    android:textColor="@color/black0"
                    android:textSize="@dimen/font14" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rlHospitalAction"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_below="@id/rlExpressageAction"
                android:layout_marginTop="2dp"
                android:background="@color/white0">

                <ImageView
                    android:id="@+id/ivHospitalAction"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/pay_choose_un" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/ivHospitalAction"
                    android:text="医院自取"
                    android:textColor="@color/black0"
                    android:textSize="@dimen/font14" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl5Function"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlHospitalAction"
                android:layout_marginTop="12dp"
                android:background="@color/white0">

                <RelativeLayout
                    android:id="@+id/rlHospitalGet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white0"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv1None"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="12dp"
                        android:text="选择医院"
                        android:textColor="@color/gray12"
                        android:textSize="@dimen/font16" />

                    <TextView
                        android:id="@+id/tv22None"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv1None"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="12dp"
                        android:text="所选医生"
                        android:textColor="@color/gray12"
                        android:textSize="@dimen/font14" />

                    <TextView
                        android:id="@+id/tv33None"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv22None"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="12dp"
                        android:text="医院地址"
                        android:textColor="@color/gray12"
                        android:textSize="@dimen/font14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv33None"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="9dp"
                        android:paddingBottom="12dp"
                        android:text="*请付款后到该医院领取设备，开通服务"
                        android:textColor="@color/gray4"
                        android:textSize="@dimen/font14" />

                    <TextView
                        android:id="@+id/tvHospitalName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="12dp"
                        android:text=""
                        android:textColor="@color/gray12"
                        android:textSize="@dimen/font14" />

                    <TextView
                        android:id="@+id/tvDoctorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/tv1None"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="12dp"
                        android:text=""
                        android:textColor="@color/gray12"
                        android:textSize="@dimen/font14" />

                    <TextView
                        android:id="@+id/tvHospitalAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/tvDoctorName"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="12dp"
                        android:text=""
                        android:textColor="@color/gray12"
                        android:textSize="@dimen/font14" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rlNoneGet"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="地址都没有添加，要寄到哪里了？"
                        android:textColor="@color/gray4"
                        android:textSize="@dimen/font14" />

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="12dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/wo_head_arrow_right" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rlExpressageGet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white0"
                    android:paddingBottom="12dp"
                    android:paddingLeft="20dp"
                    android:visibility="gone">


                    <LinearLayout
                        android:id="@+id/llOne1Function"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收货人:"
                            android:textColor="@color/gray4"
                            android:textSize="@dimen/font14" />

                        <TextView
                            android:id="@+id/tvAddressName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text=""
                            android:textColor="@color/black0"
                            android:textSize="@dimen/font14" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llTwoFunction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/llOne1Function"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="电    话:"
                            android:textColor="@color/gray4"
                            android:textSize="@dimen/font14" />

                        <TextView
                            android:id="@+id/tvAddressPhoneNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text=""
                            android:textColor="@color/black0"
                            android:textSize="@dimen/font14" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/llTwoFunction"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收货地址:"
                            android:textColor="@color/gray4"
                            android:textSize="@dimen/font14" />

                        <TextView
                            android:id="@+id/tvAddressText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text=""
                            android:textColor="@color/black0"
                            android:textSize="@dimen/font14" />
                    </LinearLayout>


                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="12dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/wo_head_arrow_right" />

                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl6Function"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl5Function"
                android:layout_marginTop="12dp"
                android:background="@color/white0"
                android:paddingBottom="12dp">

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="12dp"
                    android:text="商品清单"
                    android:textColor="@color/gray12"
                    android:textSize="@dimen/font14" />

                <cn.ihealthbaby.weitaixin.ui.widget.CustomListView
                    android:id="@+id/lvGoodsList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="4dp"
                    android:clickable="false"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0dp"
                    android:fadingEdge="none"
                    android:focusable="false"
                    android:listSelector="@android:color/transparent"
                    android:scrollbars="none" />

            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>


    <RelativeLayout
        android:id="@+id/rl10Function"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="1dp"
        android:background="@color/white0">

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:text=""
            android:textColor="@color/red0"
            android:textSize="@dimen/font14" />

        <TextView
            android:id="@+id/tvSericeSubmitOrder"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@color/red0"
            android:gravity="center"
            android:text="提交订单"
            android:textColor="@drawable/text_color_selector"
            android:textSize="@dimen/font14" />

    </RelativeLayout>


</RelativeLayout>


