<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray5"
    android:orientation="vertical">

    <include
        android:id="@+id/head_title_id"
        layout="@layout/layout_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:fadingEdge="none"
        android:scrollbars="none"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray5"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_head_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/head_title_id"
                android:paddingBottom="14dp"
                android:layout_marginTop="4dp"
                android:background="@color/white0"
                android:visibility="visible">

                <cn.ihealthbaby.weitaixin.view.RoundImageView
                    android:id="@+id/iv_wo_head_icon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/camera_icon" />

                <TextView
                    android:id="@+id/tv_wo_head_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_wo_head_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:text="张丽丽"
                    android:textColor="@color/black0"
                    android:textSize="@dimen/font_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_wo_head_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_wo_head_breed_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="已孕：24周5天"
                        android:textColor="@color/gray3"
                        android:textSize="@dimen/font_normal" />


                    <TextView
                        android:id="@+id/tv_wo_head_deliveryTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:singleLine="true"
                        android:text="预产：9月27日"
                        android:textColor="@color/gray3"
                        android:textSize="@dimen/font_normal" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_wo_head_arrow_right"
                    android:layout_width="10dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:visibility="invisible"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/wo_head_arrow_right" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_set_01"
                style="@style/wo_info_item"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:singleLine="true"
                    android:text="我的电话"
                    android:textColor="@color/black0"
                    android:textSize="@dimen/font_normal" />


                <TextView
                    android:id="@+id/tv_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/iv_arrow_right2"
                    android:singleLine="true"
                    android:text="我的电话"
                    android:textColor="@color/black0"
                    android:textSize="@dimen/font_normal" />

                <ImageView
                    android:id="@+id/iv_arrow_right2"
                    android:layout_width="10dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/wo_head_arrow_right"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_set_02"
                style="@style/wo_info_item"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:singleLine="true"
                    android:text="出生日期"
                    android:textColor="@color/black0"
                    android:textSize="@dimen/font_normal" />


                <TextView
                    android:id="@+id/tv_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/iv_arrow_right"
                    android:singleLine="true"
                    android:text="1989-09-08"
                    android:textColor="@color/black0"
                    android:textSize="@dimen/font_normal" />

                <ImageView
                    android:id="@+id/iv_arrow_right"
                    android:layout_width="10dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/wo_head_arrow_right"
                    android:visibility="visible" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="监护信息"
                android:textColor="@color/gray3"
                android:textSize="@dimen/font_normal" />

            <RelativeLayout
                android:id="@+id/ll_set_04"
                style="@style/wo_info_item"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:singleLine="true"
                    android:text="设备SN码"
                    android:textColor="@color/black0"
                    android:textSize="@dimen/font_normal" />


                <TextView
                    android:id="@+id/tv_sn_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:singleLine="true"
                    android:text="19896456456"
                    android:textColor="@color/black0"
                    android:textSize="@dimen/font_normal" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_set_03"
                style="@style/wo_info_item"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:singleLine="true"
                    android:text="所在地区"
                    android:textColor="@color/black0"
                    android:textSize="@dimen/font_normal" />


                <TextView
                    android:id="@+id/tv_place_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:singleLine="true"
                    android:text="北京海淀"
                    android:textColor="@color/black0"
                    android:textSize="@dimen/font_normal" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_set_05"
                style="@style/wo_info_item"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:singleLine="true"
                    android:text="所在医院"
                    android:textColor="@color/black0"
                    android:textSize="@dimen/font_normal" />


                <TextView
                    android:id="@+id/tv_hospital_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:singleLine="true"
                    android:text="海淀区医院"
                    android:textColor="@color/black0"
                    android:textSize="@dimen/font_normal" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_set_06"
                style="@style/wo_info_item"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:singleLine="true"
                    android:text="主治医师"
                    android:textColor="@color/black0"
                    android:textSize="@dimen/font_normal" />


                <TextView
                    android:id="@+id/tv_doctor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:singleLine="true"
                    android:text="张中及 主任"
                    android:textColor="@color/black0"
                    android:textSize="@dimen/font_normal" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
