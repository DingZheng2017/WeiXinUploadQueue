<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="74dp">

        <TextView
            android:id="@+id/tvRecordDelete"
            android:layout_width="100dp"
            android:layout_height="73dp"
            android:layout_gravity="right|center_vertical"
            android:background="@color/red0"
            android:gravity="center"
            android:text="删 除"
            android:textColor="@drawable/text_color_hei_selector"
            android:textSize="@dimen/font18"/>

        <RelativeLayout
            android:id="@+id/rlRecordItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:layout_marginLeft="9dp"
                android:background="@drawable/bg_record_item">

                <LinearLayout
                    android:id="@+id/ll_Layout"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/record_circle"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCircleTime1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray3"
                        android:textSize="@dimen/font10"/>

                    <TextView
                        android:id="@+id/tvCircleTime2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black1"
                        android:textSize="@dimen/font18"/>
                </LinearLayout>


                <ImageView
                    android:id="@+id/ivClock"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="18dp"
                    android:layout_toRightOf="@id/ll_Layout"
                    android:scaleType="fitCenter"
                    android:src="@drawable/record_clock"/>


                <TextView
                    android:id="@+id/tvTestTimeLong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@id/ivClock"
                    android:gravity="top"
                    android:singleLine="true"
                    android:text="0秒"
                    android:textColor="@color/black0"
                    android:textSize="@dimen/font16"/>


                <TextView
                    android:id="@+id/tvDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/ll_Layout"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/ll_Layout"
                    android:singleLine="true"
                    android:text="月日"
                    android:textColor="@color/gray3"
                    android:textSize="@dimen/font_normal"/>

                <TextView
                    android:id="@+id/tvAdviceStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/recode_half_circle"
                    android:gravity="center"
                    android:text="问医生"
                    android:textColor="@drawable/text_color_selector"/>

            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>
