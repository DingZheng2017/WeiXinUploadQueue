<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00FFFFFF"
    android:orientation="horizontal">

    <TextView
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="#00FFFFFF" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/recode_half_circle_bg">

        <LinearLayout
            android:id="@+id/ll_Layout"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@drawable/record_circle">

            <TextView
                android:id="@+id/tvCircleTime1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font12"
                android:textColor="@color/gray3"
                android:text="20周" />

            <TextView
                android:id="@+id/tvCircleTime2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black1"
                android:textSize="@dimen/font20"
                android:text="05" />
        </LinearLayout>


        <ImageView
            android:id="@+id/ivClock"
            android:layout_width="20dp"
            android:layout_marginTop="4dp"
            android:layout_height="20dp"
            android:layout_alignTop="@id/ll_Layout"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/ll_Layout"
            android:scaleType="fitCenter"
            android:src="@drawable/record_clock" />


        <TextView
            android:id="@+id/tvTestTimeLong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/ivClock"
            android:layout_alignTop="@id/ll_Layout"
            android:layout_toRightOf="@id/ivClock"
            android:singleLine="true"
            android:layout_marginLeft="6dp"
            android:text="18分27秒"
            android:textColor="@color/black0"
            android:textSize="@dimen/font22" />


        <TextView
            android:id="@+id/tvDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ll_Layout"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/ll_Layout"
            android:singleLine="true"
            android:text="03月8日 22:32"
            android:textColor="@color/gray3"
            android:textSize="@dimen/font_normal" />

        <TextView
            android:id="@+id/tvAdviceStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/recode_half_circle"
            android:gravity="center"
            android:text="问医生"
            android:textColor="@drawable/text_color_selector" />

    </RelativeLayout>

</LinearLayout>
