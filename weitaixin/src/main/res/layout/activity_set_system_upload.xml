<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:slideswitch="http://schemas.android.com/apk/res-auto"
              android:background="@color/gray5"
              android:orientation="vertical">

    <include
        android:id="@+id/head_title_id"
        layout="@layout/layout_title"/>


    <RelativeLayout
        android:id="@+id/ll_set_system_01"
        style="@style/wo_info_item"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:singleLine="true"
            android:text="上传设置"
            android:textColor="@drawable/text_color_hei_selector"
            android:textSize="@dimen/font_normal"/>

        <cn.ihealthbaby.weitaixin.view.SlideSwitch
            android:id="@+id/slide_switch_upload"
            slideswitch:isOpen="true"
            slideswitch:shape="circle"
            slideswitch:themeColor="@color/green0"
            android:layout_width="50dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"/>
    </RelativeLayout>


</LinearLayout>


