<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white0">


    <TextView
        android:id="@+id/tvPayType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="20dp"
        android:text=""
        android:textColor="@color/green0"
        android:textSize="@dimen/font14" />


    <TextView
        android:id="@+id/tvGoodsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="22dp"
        android:layout_toRightOf="@id/tvPayType"
        android:text=""
        android:textColor="@color/font_color"
        android:textSize="@dimen/font14" />

    <TextView
        android:id="@+id/tvGoodsTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPayType"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="@color/font_color"
        android:textSize="@dimen/font14" />


    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tvGoodsTime"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray15" />

    <TextView
        android:id="@+id/tvTextText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewLine"
        android:layout_marginLeft="26dp"
        android:text="合计:"
        android:textColor="@color/gray4"
        android:textSize="@dimen/font14" />

    <TextView
        android:id="@+id/tvPayPriceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/viewLine"
        android:layout_marginRight="18dp"
        android:text=""
        android:textColor="@color/red2"
        android:textSize="@dimen/font14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTextText"
        android:layout_marginTop="18dp"
        android:paddingBottom="18dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPayDelect"
            android:layout_width="154dp"
            android:layout_height="26dp"
            android:layout_marginLeft="26dp"
            android:background="@drawable/pay_rectangle_white"
            android:gravity="center"
            android:visibility="visible"
            android:text="删除"
            android:textColor="@drawable/text_color_gray3_selector"
            android:textSize="@dimen/font14" />

        <TextView
            android:id="@+id/tvPayAffirmGoodsOrGoPay"
            android:layout_width="156dp"
            android:layout_height="26dp"
            android:visibility="visible"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="18dp"
            android:background="@color/green0"
            android:gravity="center"
            android:text="确认收货"
            android:textColor="@drawable/text_color_selector"
            android:textSize="@dimen/font14" />
    </LinearLayout>

</RelativeLayout>
