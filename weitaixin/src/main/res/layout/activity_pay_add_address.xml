<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray5">

    <include
        android:id="@+id/head_title_id"
        layout="@layout/layout_title" />

    <RelativeLayout
        android:id="@+id/rlFak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head_title_id"
        android:layout_marginTop="8dp"
        android:background="@color/white0">

        <RelativeLayout
            android:id="@+id/rl1Function"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="18dp"
                android:gravity="center"
                android:text="收货人"
                android:textColor="@color/gray4"
                android:textSize="@dimen/font10" />


            <TextView
                android:id="@+id/tvAddAddressName"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"
                android:gravity="center"
                android:text="李新宇"
                android:textColor="@color/font_color"
                android:textSize="@dimen/font10" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="14dp"
                android:background="@color/gray1" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl2Function"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/rl1Function">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="18dp"
                android:gravity="center"
                android:text="手机"
                android:textColor="@color/gray4"
                android:textSize="@dimen/font10" />


            <TextView
                android:id="@+id/tvAddAddressPhone"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"
                android:gravity="center"
                android:text="121312432432"
                android:textColor="@color/font_color"
                android:textSize="@dimen/font10" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="14dp"
                android:background="@color/gray1" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl3Function"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/rl2Function">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="18dp"
                android:gravity="center"
                android:text="省份"
                android:textColor="@color/gray4"
                android:textSize="@dimen/font10" />


            <TextView
                android:id="@+id/tvAddAddressProvince"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"
                android:gravity="center"
                android:text="北京"
                android:textColor="@color/font_color"
                android:textSize="@dimen/font10" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="14dp"
                android:background="@color/gray1" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl4Function"

            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/rl3Function">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="18dp"
                android:gravity="center"
                android:text="地区"
                android:textColor="@color/gray4"
                android:textSize="@dimen/font10" />


            <TextView
                android:id="@+id/tvAddAddressArea"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"
                android:gravity="center"
                android:text="海淀区"
                android:textColor="@color/font_color"
                android:textSize="@dimen/font10" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="14dp"
                android:background="@color/gray1" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl5Function"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/rl4Function">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="18dp"
                android:gravity="center"
                android:text="详细地址"
                android:textColor="@color/gray4"
                android:textSize="@dimen/font10" />


            <TextView
                android:id="@+id/tvAddAddressDetailAddress"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"
                android:gravity="center"
                android:text="北京"
                android:textColor="@color/font_color"
                android:textSize="@dimen/font10" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="14dp"
                android:background="@color/gray1" />
        </RelativeLayout>


    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/rlFak"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="26dp"
        android:gravity="center"
        android:text="保存并返回"
        android:background="@drawable/corner_background_green0"
        android:textColor="@color/green0"
        android:textSize="@dimen/font10" />

</RelativeLayout>


