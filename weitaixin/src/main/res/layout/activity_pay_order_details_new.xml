<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray5">

    <include
        android:id="@+id/head_title_id"
        layout="@layout/layout_title" />

    <ScrollView
        android:id="@+id/scrollViewl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl10Function"
        android:layout_below="@id/head_title_id"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl11Function"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="2dp"
                android:background="@color/white0"
                android:paddingBottom="12dp"
                android:paddingTop="12dp">


                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:gravity="center"
                    android:text="订单商品:"
                    android:textColor="@color/gray12"
                    android:textSize="@dimen/font14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv1"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="订单号码:"
                    android:textColor="@color/gray12"
                    android:textSize="@dimen/font14" />

                <TextView
                    android:id="@+id/tvOrderGoods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:text="开通微胎心监护租凭服务"
                    android:textColor="@color/font_color"
                    android:textSize="@dimen/font14" />

                <TextView
                    android:id="@+id/tvOrderGoodsNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tv1"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/gray12"
                    android:textSize="@dimen/font14" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl5Function"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl11Function"
                android:layout_marginTop="12dp"
                android:background="@color/white0">

                <RelativeLayout
                    android:id="@+id/rlHospitalGet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white0"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv1None"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="12dp"
                        android:text="选择医院"
                        android:textColor="@color/gray12"
                        android:textSize="@dimen/font14" />

                    <TextView
                        android:id="@+id/tv22None"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv1None"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="12dp"
                        android:text="所选医生"
                        android:textColor="@color/gray12"
                        android:textSize="@dimen/font14" />

                    <TextView
                        android:id="@+id/tv33None"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv22None"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="12dp"
                        android:text="医院地址"
                        android:textColor="@color/gray12"
                        android:textSize="@dimen/font14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv33None"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="9dp"
                        android:paddingBottom="12dp"
                        android:text="*请付款后到该医院领取设备，开通服务"
                        android:textColor="@color/gray4"
                        android:textSize="@dimen/font14" />

                    <TextView
                        android:id="@+id/tvHospitalName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="12dp"
                        android:text=""
                        android:textColor="@color/gray12"
                        android:textSize="@dimen/font14" />

                    <TextView
                        android:id="@+id/tvDoctorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/tv1None"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="12dp"
                        android:text=""
                        android:textColor="@color/gray12"
                        android:textSize="@dimen/font14" />

                    <TextView
                        android:id="@+id/tvHospitalAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/tvDoctorName"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="12dp"
                        android:text=""
                        android:textColor="@color/gray12"
                        android:textSize="@dimen/font14" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rlNoneGet"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="地址都没有添加，要寄到哪里了？"
                        android:textColor="@color/gray4"
                        android:textSize="@dimen/font14" />

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="12dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/wo_head_arrow_right" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rlExpressageGet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white0"
                    android:paddingBottom="12dp"
                    android:paddingLeft="20dp"
                    android:visibility="gone">


                    <LinearLayout
                        android:id="@+id/llOne1Function"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收货人:"
                            android:textColor="@color/gray4"
                            android:textSize="@dimen/font14" />

                        <TextView
                            android:id="@+id/tvAddressName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text=""
                            android:textColor="@color/black0"
                            android:textSize="@dimen/font14" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llTwoFunction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/llOne1Function"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="电    话:"
                            android:textColor="@color/gray4"
                            android:textSize="@dimen/font14" />

                        <TextView
                            android:id="@+id/tvAddressPhoneNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text=""
                            android:textColor="@color/black0"
                            android:textSize="@dimen/font14" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/llTwoFunction"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收货地址:"
                            android:textColor="@color/gray4"
                            android:textSize="@dimen/font14" />

                        <TextView
                            android:id="@+id/tvAddressText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text=""
                            android:textColor="@color/black0"
                            android:textSize="@dimen/font14" />
                    </LinearLayout>


                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="12dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/wo_head_arrow_right"
                        android:visibility="invisible" />

                </RelativeLayout>

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/rl6Function"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl5Function"
                android:layout_marginTop="12dp"
                android:background="@color/white0"
                android:orientation="vertical"
                android:paddingBottom="12dp">

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="12dp"
                    android:text="商品清单"
                    android:textColor="@color/gray12"
                    android:textSize="@dimen/font14" />

                <cn.ihealthbaby.weitaixin.ui.widget.CustomListView
                    android:id="@+id/lvGoodsList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="4dp"
                    android:clickable="false"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0dp"
                    android:fadingEdge="none"
                    android:focusable="false"
                    android:listSelector="@android:color/transparent"
                    android:scrollbars="none" />

                <LinearLayout
                    android:id="@+id/llPalne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/llPalneWay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rlPalneWay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:paddingBottom="8dp"
                                android:paddingTop="8dp"
                                android:text="支付方式"
                                android:textColor="@color/gray4"
                                android:textSize="@dimen/font14" />

                            <TextView
                                android:id="@+id/tvOrderDetailsPayway"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:paddingBottom="8dp"
                                android:paddingTop="8dp"
                                android:text=""
                                android:textSize="@dimen/font14" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:paddingBottom="8dp"
                                android:paddingTop="8dp"
                                android:text="领取方式"
                                android:textColor="@color/gray4"
                                android:textSize="@dimen/font14" />

                            <TextView
                                android:id="@+id/tvOrderDetailsPullway"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:paddingBottom="8dp"
                                android:paddingTop="8dp"
                                android:text=""
                                android:textSize="@dimen/font14" />
                        </RelativeLayout>

                    </LinearLayout>


                     <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"
                            android:text="支付方式"
                            android:textColor="@color/gray4"
                            android:textSize="@dimen/font14"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/tvOrderDetailsPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"
                            android:text=""
                            android:textColor="@color/red0"
                            android:textSize="@dimen/font14" />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/rl10Function"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="1dp"
        android:background="@color/white0"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCancelOrder"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/corner_gray10"
            android:gravity="center"
            android:text="取消订单"
            android:textColor="@drawable/text_color_gray3_selector"
            android:textSize="@dimen/font14"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvPayAffirmGoodsOrGoPay"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@color/red0"
            android:gravity="center"
            android:text="去支付"
            android:textColor="@drawable/text_color_selector"
            android:textSize="@dimen/font14"
            android:visibility="invisible" />

    </LinearLayout>


</RelativeLayout>


