<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray5">



    <RelativeLayout
        android:id="@+id/rlHomeHeadArea"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@id/head_title_id"
        android:background="@color/green6">

        <RelativeLayout
            android:id="@+id/rlPregnancyDate"
            android:layout_width="150dp"
            android:layout_height="24dp"
            android:layout_above="@+id/rlProduceDate"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="-50dp"
            android:layout_toRightOf="@+id/ivHomeHeadImg"
            android:background="@drawable/home_head_one">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:layout_toLeftOf="@+id/tvPregnancyDayNumber"
                android:singleLine="true"
                android:text="怀孕天数"
                android:textColor="@color/white0" />

            <TextView
                android:id="@+id/tvPregnancyDayNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="278"
                android:textColor="@color/white0" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlProduceDate"
            android:layout_width="150dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-50dp"
            android:layout_toRightOf="@+id/ivHomeHeadImg"
            android:background="@drawable/home_head_two">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:layout_toLeftOf="@+id/tvProduceDayNumber"
                android:singleLine="true"
                android:text="距预产期"
                android:textColor="@color/white0" />

            <TextView
                android:id="@+id/tvProduceDayNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="278"
                android:textColor="@color/white0" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rltvMonitorDate"
            android:layout_width="150dp"
            android:layout_height="24dp"
            android:layout_below="@+id/rlProduceDate"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-50dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/ivHomeHeadImg"
            android:background="@drawable/home_head_three">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="34dp"
                android:layout_toLeftOf="@+id/tvMonitorDayNumber"
                android:singleLine="true"
                android:text="已监测"
                android:textColor="@color/white0" />

            <TextView
                android:id="@+id/tvMonitorDayNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="35"
                android:textColor="@color/white0" />
        </RelativeLayout>


        <TextView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/ivHomeHeadImg"
            android:background="@drawable/home_head_age"
            android:gravity="center"
            android:text="31"
            android:textColor="@color/white0"
            android:textSize="@dimen/font14" />

        <ImageView
            android:id="@+id/ivHomeHeadImg"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:src="@drawable/home_head_img" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivHomeHeadImg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="张晓非"
            android:textColor="@color/white0"
            android:textSize="@dimen/font18" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rlHomeHeadArea"
        android:background="@color/white0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llHomeFunctionOneAction"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/home_function_action_selector"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/home_function_img_one" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="胎心监护" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llHomeFunctionTwoAction"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/home_function_action_selector"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/home_function_img_two" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="医生回复" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llHomeFunctionThreeAction"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/home_function_action_selector"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/home_function_img_three" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="监测记录" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llHomeFunctionFourAction"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/home_function_action_selector"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/home_function_img_four" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="我的帐户" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>












