<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cn.ihealthbaby.weitaixin">


    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.camera" />


    <application
        android:name=".WeiTaiXinApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">

        <activity android:name=".fragment.MeMainFragmentActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity" />
        <activity android:name=".activity.RegistActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.SetSystemActivity" />
        <activity android:name=".activity.WoInformationActivity" />
        <activity android:name=".activity.InfoEditActivity" />
        <activity android:name=".activity.WoGoldenActivity" />
        <activity android:name=".activity.WoMessageActivity" />
        <activity android:name=".activity.SetSystemSuggestionActivity" />
        <activity android:name=".activity.SetSystemResetPasswordActivity" />
        <activity android:name=".ui.demo.ViewActivity" />

        <activity android:name=".ui.demo.DeviceListActivity"/>


        <activity
            android:name=".ui.monitor.MonitorActivity"
            android:label="@string/title_activity_monitor" />
        <activity
            android:name=".ui.monitor.CurveDetialActivity"
            android:label="@string/title_activity_curve_detial" />
    </application>

</manifest>
